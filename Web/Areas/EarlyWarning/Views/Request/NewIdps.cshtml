@using Cats.Helpers
@using Cats.Security
@model Cats.Models.HRDPSNPPlan

@{
    ViewBag.Title = "Creat";

    Layout = "~/Views/Shared/NewTheme _MainLayout.cshtml";
    // Layout = "~/Views/Shared/_CATSLayout.cshtml";
    ViewBag.PageTitle = "New Fast on Set Request";
    ViewBag.PageTitleDescription = "";
}

