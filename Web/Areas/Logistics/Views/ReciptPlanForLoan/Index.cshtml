                  .DataSource(dataSource => dataSource
                                                .Ajax()
                                                .Model(model => model.Id(m => m.LoanReciptPlanID))
                                                .Read(read => read.Action("LoanReciptPlan_Read", "ReciptPlanForLoan"))
